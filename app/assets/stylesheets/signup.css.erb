* {
  margin: 0px;
  padding: 0px;
  text-decoration: none;
}


.login-background{
 margin-top: -30px;
 height: 100vh;
 width: 100vw;
 position: fixed;
 background-image: url( <%= asset_path 'login-background.jpg' %>);
 background-size: cover;
 display: flex;
 align-items: center;
}

.chef-login-background{
  height: calc(100vh - 100px);
  width: 100vw;
  position: fixed;
  background-image: url( <%= asset_path 'chef-login-background.jpg' %>);
  background-size: cover;
  display: flex;
  align-items: center;
 }

.box {
  width: 400px;
  background-color: white;
  opacity: 0.95;
  margin: auto;
  border-radius: 20px;
  border: 2px #ddd solid;
  }

.box-inner {
  padding: 20px 26px;
}

h1 {
  font-weight: 500;
  font-size: 30px;
  line-height: 1.5;
  margin: 2vh 0 2vh;
  padding-bottom: 5px;
  color: #222222;
  text-align: center;
}

.signup-wrap h2 {
  font-weight: 400;
  text-shadow: 2px 2px 4px rgba(131, 131, 131, 0.5);
  font-size: 24px;
  line-height: 1.5;
  margin: 1vh 0 1vh;
  padding-bottom: 5px;
  color: #222222;
  text-align: center;
}

.signup-title h2 {
  margin: 2vh 0 2vh;
}

.box-email {
  margin-top: 1vh;
  margin-bottom: 2vh;
}

.box-password {
  margin-bottom: 2vh;
}

.box-email label, .box-password label {
  font-weight: 700;
  font-size: 13px;
  padding-left: 3px;
  padding-bottom: 3px;
}


.box-email input[type="email"], .box-password input[type="password"] {
  border-style: none;
  box-sizing: border-box;
  width: 100%;
  height: 31px;
  border: 1px solid #a6a6a6;
  box-shadow: 0 1px 0 rgba(0,0,0,.07) inset;
  border-radius: 3px;
  padding: 0 7px;
}

.column-left {
  float: left;
}

.column-right {
  float: right;
}

.box-password a {
  font-size: 13px;
}

.box-login {
  margin-bottom: 3vh;
}

.box-login input[type="submit"] {
  border-style: none;
  width: 100%;
  height: 31px;
  background: linear-gradient(to bottom,#ffe54f,#f7b716);
  border-radius: 3px;
  border: 1px #a88734 solid;
}

.box-login input[type="submit"]:hover {
  cursor: pointer;
  background: #f0c14b;
}

.remember {
  font-size: 13px;
  margin-bottom: 20px;
  padding-left: 3px;
}

.box-newuser {
  border-top: 3px gray double;
  padding-top: 20px;
}

.box-newuser p {
  text-align: center;
  font-size: 15px;
  color: #5c5c5c;
  margin-bottom: 14px;
}

.box-newuser a {
  display: block;
  width: 100%;
  height: 31px;
  font-size: 15px;
  color: #111;
  line-height: 31px;
  text-align: center;
  background: linear-gradient(to bottom,#f7f8fa,#e7e9ec);
  border-radius: 3px;
  border: 1px #a2a6ac solid;
}

.box-newuser a:hover {
  background: #e7e9ec;
}

.login-flash-message {
  text-align: center;
  color: red;
}

.required {
  background: #ebb11f;
  margin-left: 5px;
  padding: 1px 3px;
  border-radius: 2px;
  color: #fff;
  font-size: 11px;
  font-weight: bold;
}

.signup-background{
  width: 100vw;
  background-attachment: fixed;
  background-image: url( <%= asset_path 'signup-background.jpg' %>);
  background-size: cover;
  padding: 2.3vh 0 2.3vh;
 }

.chef-signup-background{
  width: 100vw;
  background-attachment: fixed;
  background-image: url( <%= asset_path 'chefs-signup-background.jpg' %>);
  background-size: cover;
  padding: 3vh 0 3.7vh;
 }

.chef-signup-next-background{
  width: 100vw;
  background-attachment: fixed;
  background-image: url( <%= asset_path 'chefs-signup-next-background.jpg' %>);
  background-size: cover;
  padding: 3vh 0 3vh;
}

.signup-wrap {
  min-width: 400px;
  width: 30%;
  background-color: white;
  padding: 1vh 2vw 3vh;
  opacity: 0.9;
  margin: auto;
  border-radius: 20px;
  border: 2px #ddd solid;
}

.signup-box {
  width: 400px;
  height: 500px;
  background-color: white;
  opacity: 0.95;
  margin: auto;
  border-radius: 20px;
  border: 2px #ddd solid;
}

.box-signup {
  text-align: center;
  border-top: 3px gray double;
  padding: 2vh;
}

.legal-text{
  margin-bottom: 20px;
}

.box-signup input[type="submit"] {
  border-style: none;
  width: 80%;
  height: 40px;
  background: linear-gradient(to bottom,#ffe54f,#f7b716);
  border-radius: 5px;
  border: 1px #a88734 solid;
}

.box-signup input[type="submit"]:hover {
  cursor: pointer;
  background: #f0c14b;
}