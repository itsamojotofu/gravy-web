<%= render "shared/header" %>

<%= form_with model: @card, url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
<div class="new-card-page">
    <div class='buy-dish-title'>
      <h1 class='registration-title-text'>
        クレジットカード情報登録
      </h1>
    </div>
    <div class='credit-card-registration'>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="required">Required</span>
        </div>
        <%= f.text_field :number, class:"input-card-number", id:"number", placeholder:" カード番号(半角英数字)", maxlength:"16" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="required">Required</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <%= f.text_field :exp_month, class:"input-expiration-date", id:"exp_month", placeholder:"例)4" %>
          <p>月</p>
          <%= f.text_field :exp_year, class:"input-expiration-date", id:"exp_year", placeholder:"例)25" %>
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="required">Required</span>
        </div>
        <%= f.text_field :cvc,class:"input-security-code", id:"cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>
    </div>
    <div class='buy-btn'>
      <% if flash[:alert] %>
        <div class='card-flash-message'>
        <%= "Typed Card Information is incorrect." %>
        </div> 
      <% end %>
      <%= f.submit "登録する" , class:"buy-yellow-btn" %>
    </div>
</div>
<% end %>

<%= render "shared/footer" %>

