<%= render "shared/second-header"%>


<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with model: @chef, url: chef_registration_path, id: 'new_chef', class: 'new_chef', local: true do |f| %>
<div class="chef-signup-background">
  <div class="signup-wrap">
    <div class="signup-title">
      <h2>シェフ用アカウント</h2>
    </div>

    <%= render 'shared/error_messages', model: f.object %>
    
    <div class="wrap-inner">
      <div class="box-email">
        <label class="form-text">お名前</label>
        <span class="required">Required</span><br />
        <%= f.text_field :name, class:"input-default", id:"nickname", placeholder:"例) gravy花子", maxlength:"30" %>
      </div>

      <div class="box-email">
        <%= f.label :email %>
        <span class="required">Required</span><br />
        <%= f.email_field :email %>
      </div>
       
      <div class="box-password">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上の半角英数字)</em>
        <% end %>
        <span class="required">Required</span><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="box-password">
        <%= f.label :password_confirmation %>
        <span class="required">Required</span><br />
        <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい", autocomplete: "off" %>
      </div>

      <div class="box-email">
        <label class="form-text">郵便番号</label>
        <span class="required">Required</span><br />
        <%= f.text_field :zip_code, autocomplete: "off", placeholder:"例) 000-0000" %>
      </div>

      <div class="box-email">
        <label class="form-text">都道府県</label>
        <span class="required">Required</span><br />
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>

      <div class="box-email">
        <label class="form-text">市町村</label>
        <span class="required">Required</span><br />
        <%= f.text_field :district, autocomplete: "off" %>
      </div>

      <div class="box-email">
        <label class="form-text">番地(建物名)</label>
        <span class="required">Required</span><br />
        <%= f.text_field :street, autocomplete: "off" %>
      </div>

      <div class="box-email">
        <label class="form-text">電話番号</label>
        <span class="required">Required</span><br />
        <%= f.text_field :phone_number, autocomplete: "off" %>
      </div>

      </div>
      <div class="box-signup">
        <%= f.submit "Next" %>
      </div>
    </div>
  </div>
</div>
<% end %>